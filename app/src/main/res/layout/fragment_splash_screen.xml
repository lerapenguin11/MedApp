<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.SplashScreenFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:lottie_autoPlay="true"
        app:lottie_cacheComposition="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/med_splash_screen"
        app:lottie_speed="1" />

    <TextView
        android:id="@+id/title_splash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="24sp"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/accent_dark_primary"
        app:layout_constraintEnd_toEndOf="@+id/anim"
        app:layout_constraintStart_toStartOf="@+id/anim"
        app:layout_constraintTop_toBottomOf="@+id/anim" />
</androidx.constraintlayout.widget.ConstraintLayout>