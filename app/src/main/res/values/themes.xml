<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_dark_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_dark_primary</item>
        <item name="colorSecondaryVariant">@color/accent_dark_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SectionHeader" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>
    
    <style name="BadgeText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/accent_bright_primary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="InputPlaceholderNormal" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/input_placeholdrer_tex</item>
    </style>

    <style name="InputPlaceholderSmall" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputValue" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>
    
    <style name="BodyRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextTransparent" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent_dark_primary</item>
    </style>

    <style name="ScreenHeader" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
    </style>

    <style name="InputLabelSmall" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextUnderlined" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:autoLink">all</item>
        <item name="android:color">@color/accent_dark_primary</item>
    </style>

    <style name="TextHeardMedium24" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_dark_primary</item>
    </style>

    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/input_placeholdrer_tex</item>
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@color/input_placeholdrer_tex</item>
        <item name="colorControlActivated">@color/text_dark_primary</item>
        <item name="colorControlHighlight">@color/text_dark_primary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="colorControlNormal">@color/text_dark_primary</item>
    </style>
</resources>